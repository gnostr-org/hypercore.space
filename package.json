  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "fake-indexeddb": "^3.0.2",
    "jest": "^26.0.1",
    "microbundle-crl": "^0.13.10",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5",
    "wrtc": "^0.4.5"
  },
  "dependencies": {
    "@types/node": "^14.0.13",
    "chacha-js": "^2.1.1",
    "get-random-values": "^1.2.0",
    "idb": "^5.0.4",
    "jsencrypt": "^3.0.0-rc.1",
    "jshashes": "^1.0.8",
    "tslib": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "verbose": true,
    "modulePaths": [
      "<rootDir>/target/node/",
      "<rootDir>/test",
      "<rootDir>/src",
      "<rootDir>/node_modules/**"
    ],
    "roots": [
      "./test"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
