{
  "name": "@hyper-hyper-space/core",
  "version": "0.6.3",
  "author": "Santiago Bazerque",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperhyperspace/hyperhyperspace-core.git"
  },
  "scripts": {
    "build": "npx ttsc --project tsconfig.build.json",
    "build-dev": "npx ttsc",
    "clean": "rm -rf ./dist/* && rm -rf ./dist-dev/* ",
    "winclean": "if exist dist (rmdir dist /s /q) && mkdir dist && if exist dist-dev (rmdir dist-dev /s /q) && mkdir dist-dev",
    "test": "npx jest"
  },
  "devDependencies": {
    "@hyper-hyper-space/node-env": "^0.8.0",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.0.13",
    "@types/ws": "^7.2.6",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@types/node-rsa": "^1.1.0",
    "broadcast-channel": "^3.5.3",
    "chacha-js": "^2.1.1",
    "fast-text-encoding": "^1.0.3",
    "get-random-values": "^1.2.0",
    "idb": "^5.0.4",
    "jsencrypt": "3.0.0-rc.1",
    "jshashes": "^1.0.8",
    "node-rsa": "^1.1.1",
    "tslib": "^2.0.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "verbose": true,
    "modulePaths": [
      "<rootDir>/test",
      "<rootDir>/src",
      "<rootDir>/node_modules/**"
    ],
    "roots": [
      "./test"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
